{
  "name": "associate-planner",
  "version": "1.0.0",
  "description": "A Figma-like planning app for managing tasks and dependencies",
  "main": "./out/main/index.js",
  "author": "",
  "license": "MIT",
  "scripts": {
    "dev": "electron-vite dev",
    "dev:debug": "electron-vite dev -- --remote-debugging-port=9222",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "start": "electron-vite preview",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "@xyflow/react": "^12.6.1",
    "react-resizable": "^3.0.5",
    "pg": "^8.13.1",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "electron": "^33.2.1",
    "electron-vite": "^2.3.0",
    "vite": "^5.4.11",
    "tailwindcss": "^3.4.16",
    "postcss": "^8.4.49",
    "autoprefixer": "^10.4.20",
    "typescript": "^5.7.2",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/node": "^22.10.2",
    "@types/pg": "^8.11.10",
    "@types/react-resizable": "^3.0.8",
    "@vitejs/plugin-react": "^4.3.4"
  },
  "build": {
    "appId": "com.associate.planner",
    "productName": "Associate Planner",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": ["nsis", "portable"]
    },
    "mac": {
      "target": ["dmg", "zip"]
    },
    "linux": {
      "target": ["AppImage", "deb"]
    }
  }
}
